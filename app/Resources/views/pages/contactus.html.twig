{% extends 'layout.html.twig' %} 
{% block pagecss %}
    <link rel="stylesheet" href="{{ asset('assets/css/custom_content.css') }}">
    <style>
        #map-canvas {
            margin: 0;
            padding: 0;
            height: 100%;
        }
    </style>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div id="gmap_canvas" style="height:500px;width:100%;"></div>
            <div class="col-sm-4">
                <h2 class=page-header>Contact Form in Symfony</h2>
                {{form_start(form)}}
                {{form_widget(form)}}
                {{form_end(form)}}
            </div>
        </div>
    </div>
{% endblock %}
{% block pagejs %}
    <script src="{{ asset('assets/vendor/moment/min/moment.min.js') }}"></script>
    <script src="{{ asset('assets/js/custom_content.js') }}"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
{#    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry&sensor=false"></script>#}
    <script>
         
	        function init_map()
	        {
	            var myOptions = {scrollwheel: false, zoom:17,center:new google.maps.LatLng(47.9226316,106.9069176),mapTypeId: google.maps.MapTypeId.ROADMAP};
	            map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);
	            marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(47.9226316,106.9069176)});
	            infowindow = new google.maps.InfoWindow({content:"<b></b><br/><br/> Ulaanbaatar" });
	            google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});
	        }
	        google.maps.event.addDomListener(window, 'load', init_map);
    
    </script>
{% endblock %}